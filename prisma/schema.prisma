generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String @unique
  password String
}

model Service {
  id      Int    @id @default(autoincrement())
  name    String @unique
  desc    String @unique
  imageId Int?
  Image   Image? @relation(fields: [imageId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "public_Service_imageId_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Category {
  id      BigInt  @id @default(autoincrement())
  name    String  @unique
  desc    String  @unique
  imageId BigInt?
  Image   Image?  @relation(fields: [imageId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "public_Category_imageId_fkey")
  Dish    Dish[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Dish {
  id       BigInt    @id @default(autoincrement())
  name     String    @unique
  category String?
  price    Decimal   @unique @db.Decimal
  desc     String    @unique
  imageId  Int?
  Category Category? @relation(fields: [category], references: [name], onDelete: NoAction, onUpdate: NoAction, map: "public_Dish_category_fkey")
  Image    Image?    @relation(fields: [imageId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "public_Dish_imageId_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Employee {
  id       BigInt    @id @default(autoincrement())
  name     String    @unique
  position String?
  exp      String    @unique
  imageId  Int?
  Image    Image?    @relation(fields: [imageId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "public_Employee_imageId_fkey")
  Position Position? @relation(fields: [position], references: [name], onDelete: NoAction, onUpdate: NoAction, map: "public_Employee_position_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Feedback {
  id      BigInt  @id @default(autoincrement())
  name    String?
  rating  Int?
  content String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Gallery {
  id      Int    @id @default(autoincrement())
  name    String @unique
  imageId Int?
  Image   Image? @relation(fields: [imageId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "public_Gallery_imageId_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Image {
  id       Int        @id @default(autoincrement())
  filename String     @unique
  mimetype String     @unique
  size     Int?
  Category Category[]
  Dish     Dish[]
  Employee Employee[]
  Gallery  Gallery[]
  Service  Service[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Position {
  id       BigInt     @id @default(autoincrement())
  name     String     @unique
  desc     String     @unique
  Employee Employee[]
}