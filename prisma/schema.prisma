generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Category {
  id      Int    @id @default(autoincrement())
  name    String @unique
  desc    String @unique
  imageId Int?
  Dish    Dish[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Dish {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  category String?
  price    Decimal   @unique @db.Decimal
  desc     String    @unique
  imageId  Int?
  Category Category? @relation(fields: [category], references: [name], onDelete: NoAction, onUpdate: NoAction, map: "public_Dish_category_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Employee {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  position String?
  exp      String    @unique
  imageId  Int?
  Position Position? @relation(fields: [position], references: [name], onDelete: NoAction, onUpdate: NoAction, map: "public_Employee_position_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Feedback {
  id      Int     @id @default(autoincrement())
  name    String?
  rating  Int?
  content String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Gallery {
  id      Int    @id @default(autoincrement())
  name    String @unique
  imageId Int?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Image {
  id       Int    @id @default(autoincrement())
  filename String @unique
  mimetype String @unique
  size     Int?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Position {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  desc     String     @unique
  Employee Employee[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Service {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  desc     String  @unique
  imageUrl String?
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String @unique
  password String
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Session {
  id    Int     @id @default(autoincrement())
  email String
  name  String?
}
